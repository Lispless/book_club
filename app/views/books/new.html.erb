<h1>
  New Book
</h1>

<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <p> There were errors with your submission:</p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :title, 'Title of book' %>
    <%= f.text_field :title %><br />
  </p>
  <p>
    <%= f.label :author, 'Author of book' %><br />
    <%= f.text_field :author %>
  </p>
   <p>
    <%= f.label :year, 'Year printed' %><br />
    <%= f.text_field :year %>
  </p>
   <p>
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :category, 'Category' %><br />
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
